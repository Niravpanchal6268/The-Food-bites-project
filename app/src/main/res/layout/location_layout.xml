<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/location_card_id"
    android:layout_gravity="center_horizontal"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    android:layout_height="270dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/hotel_image_id"
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:contentDescription="TODO"
            android:src="@drawable/hotel1" />

        <TextView
            android:id="@+id/hotel_name_id"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="the hotel"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/hotel_image_id"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/opensaucesans_bold"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <LinearLayout
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/rating_box"
            android:layout_below="@+id/hotel_image_id"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/hotel_rating_id"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="5"
                android:gravity="center"
                android:fontFamily="@font/opensaucesans_bold"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="fill_parent"
                android:src="@drawable/ic_baseline_star_24"

                />
        </LinearLayout>


    </RelativeLayout>





</androidx.cardview.widget.CardView>