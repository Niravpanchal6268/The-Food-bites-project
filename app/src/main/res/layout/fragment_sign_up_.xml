<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".sign_up_F">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/sign_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lobster_regular"
            android:paddingStart="30dp"
            android:gravity="start"
            android:textColor="@color/black"
            android:text="Sign Up"
            android:textSize="50sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sname_L_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:hint="Your Name"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:placeholderText="user name">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/sname_E_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edi_text"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sPhone_L_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:hint="Mobile No"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:placeholderText="9100000000">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/sphone_E_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edi_text"
                android:inputType="number"
                android:maxLength="10"/>
        </com.google.android.material.textfield.TextInputLayout>






        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/semail_L_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:hint="Email"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:placeholderText="user11@gmail.com">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/semail_E_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edi_text"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sPassword_L_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:hint="Password"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:placeholderText="*********">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/spassword_E_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edi_text"
                android:inputType="text" />


        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton

            android:id="@+id/signup_btn_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_e"
            android:text="Sign Up"
            android:textAllCaps="false"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:contentDescription="TODO" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/swap_id"
            android:text="Swap to Sign up"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            />


    </LinearLayout>
</FrameLayout>